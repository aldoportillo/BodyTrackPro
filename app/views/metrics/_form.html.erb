<%= form_with(model: metric) do |form| %>
  <% if metric&.errors&.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(metric&.errors&.count, "error") %> prohibited this metric from being saved:</h4>
      <ul>
        <% metric&.errors&.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :weight %>
    <%= form.number_field :weight, step: 0.1, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :fat_percentage %>
    <%= form.number_field :fat_percentage, step: 0.1, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :muscle_percentage %>
    <%= form.number_field :muscle_percentage, step: 0.1, class: 'form-control', required: true %>
  </div>

  <div>
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="text-center">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
