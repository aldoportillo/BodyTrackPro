<div class="container mt-3 bg-dark text-white">
  <div class="row mb-4">
    <div class="col">
      <h1 class="text-white">Target Macros</h1>
    </div>
    <div class="col text-end">
        <%= link_to "Edit Target Macros", edit_target_macro_path, class: "btn btn-primary", "data-bs-toggle": "modal", "data-bs-target": "#editTargetMacroModal", "data-url": edit_target_macro_path %>
    </div>
  </div>
  <div class="row text-center mb-4">
    <div class="col">
      <div class="card bg-secondary text-white">
        <div class="card-body">
          <h5 class="card-title">Fat</h5>
          <p class="card-text"><%= current_user.fat %></p>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card bg-secondary text-white">
        <div class="card-body">
          <h5 class="card-title">Carbs</h5>
          <p class="card-text"><%= current_user.carb %></p>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card bg-secondary text-white">
        <div class="card-body">
          <h5 class="card-title">Protein</h5>
          <p class="card-text"><%= current_user.protein %></p>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card bg-secondary text-white">
        <div class="card-body">
          <h5 class="card-title">bmr</h5>
          <p class="card-text"><%= current_user.bmr.round(2) %></p>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card bg-secondary text-white">
        <div class="card-body">
          <h5 class="card-title">TDEE</h5>
          <p class="card-text"><%= current_user.tdee('Very active').round(2) %></p>
        </div>
      </div>
    </div>
  </div>

  <%= @nutrition_info %>

  <%= form_with url: estimate_macros_path, method: :post, local: true, data: { turbo: false }  do |form| %>
  
  <%= form.label :activity_level %>
  <%= form.select :activity_level, options_for_select(['sedentary', 'lightly active', 'moderately active', 'very active', 'super active']), required: true %>

  <%= form.label :goal %>
  <%= form.select :goal, options_for_select(['weight loss', 'muscle gain', 'maintenance']), required: true %>

  <%= form.submit "Estimate Macros" %>
<% end %>

<% if @estimated_macros.present? %>
  <div id="estimated-macros">
    <h3>Estimated Macros:</h3>
    <p>Protein: <%= @estimated_macros[:protein] %> grams</p>
    <p>Carbs: <%= @estimated_macros[:carbs] %> grams</p>
    <p>Fats: <%= @estimated_macros[:fat] %> grams</p>
  </div>
<% end %>
</div>

<div class="modal fade" id="editTargetMacroModal" tabindex="-1" aria-labelledby="editTargetMacroModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content bg-dark text-white">
      <div class="modal-header">
        <h5 class="modal-title" id="editTargetMacroModalLabel">Today's Macros</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render 'form', macro: Macro.new %>
      </div>
    </div>
  </div>
</div>